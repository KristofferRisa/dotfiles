#!/bin/bash

# Script to reinstall Claude Code
# Run this before opening a Claude Code instance if experiencing issues

set -e

echo "ðŸ”„ Reinstalling Claude Code..."

# Uninstall existing version
echo "ðŸ“¦ Uninstalling current version..."
sudo npm uninstall -g @anthropic-ai/claude-code || true

# Reinstall Claude Code
echo "ðŸ“¥ Installing latest version..."
sudo npm i -g @anthropic-ai/claude-code

echo "âœ… Claude Code has been successfully reinstalled!"
echo "   You can now use 'c' or 'cc' commands."
